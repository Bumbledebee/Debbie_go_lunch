
<div class="fotter">
  To try out this app, <strong><%= link_to 'sign in', new_user_session_path %> </strong> with <strong>admin@company.com</strong> and <strong>bigsecret</strong>
</div>

<div class="row">

<div class="large-6 large-offset-3 columns"><h2>Sign in</h2></div>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="large-6 large-offset-3 columns"><%= f.input :email, :required => false, :autofocus => true %></div>
    <div class="large-6 large-offset-3 columns"><%= f.input :password, :required => false %></div>
    <div class="large-9 large-offset-3 columns"><%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %></div>
  </div>

  <div class="form-actions">
    <div class="large-6 large-offset-3 columns"><%= f.button :submit, "Sign In" %></div>
  </div>
<% end %>

<div class="large-6 large-offset-3 columns"><%= render "devise/shared/links" %></div>
</div>
