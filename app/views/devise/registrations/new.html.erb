<h2>Sign up</h2>

<%= simple_form_for(resource, as:resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="row">
  <div class="form-inputs">
    <div class="large-6 large-offset-3 columns"><%= f.input :name, required: true, autofocus:true %></div></br>
    <div class="large-6 large-offset-3 columns"><%= f.input :email, required: true, autofocus: true %></div></br>
    <div class="large-6 large-offset-3 columns"><%= f.input :password, required:true %></div></br>
    <div class="large-6 large-offset-3 columns"><%= f.input :password_confirmation, label: "Password Confirmation", required:true %></div></br>
    <div class="large-6 large-offset-3 columns"><%= f.association :department, include_blank: false %></div></br>
    <div class="large-6 large-offset-3 columns"><%= f.association :lunchgroupleader, include_blank: false%></div></br>
    <div class="large-6 large-offset-3 columns"><%= f.input :optional %></div></br>
  </div></br>
  <div class="large-6 large-offset-3 columns">
  <div class="form-actions">
    <%= f.button :submit, "Sign Up" %></br>
    <%= render "devise/shared/links" %>
  </div>
  </div></br>
<% end %>


