
<div class="row">
<div class="large-6 large-offset-3 columns"><h2>Sign up</h2></div>

<%= simple_form_for(resource, as:resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="large-6 large-offset-3 columns"><%= f.input :email, required: true, autofocus: true %></div></br>
    <div class="large-6 large-offset-3 columns"><%= f.input :password, required:true %></div></br>
    <div class="large-6 large-offset-3 columns"><%= f.input :password_confirmation, label: "Password Confirmation", required:true %></div>
  </div>
  <div class="large-6 large-offset-3 columns">
  <div class="form-actions">
    <%= f.button :submit, "Sign Up" %></br>
    <%= render "devise/shared/links" %>
  </div>
  </div>
<% end %>

