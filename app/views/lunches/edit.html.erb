<div class="wrapper">

<h1> Change participant status for the <strong><%= "#{@lunch.name} " %></strong></h1>
<p> You can edit the name of the lunch at the bottom</p>
<div class="edit">
<table>
  <thead>
    <tr>
      <th width="200">Participant</th>
      <th width="50">Change</th>

  </thead>
  <tbody>
    <%= form_tag take_down_lunch_path(@lunch), method: :put do %>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %> </td>
      <td>
      <%= check_box_tag "lunch[users][]", user.id %>
      <%= label_tag "lunch[users][]", ""%> </td>

    </tr>
    <%end%>
    <%= submit_tag 'TAKE DOWN', class: 'button'%>
    <% end %>
  </tbody>
</table>
</div>

<div class="edit">
MIDDLE PART
</div>

<div class="edit">
<table>
  <thead>
    <tr>
      <th width="200">Not coming</th>
      <th widht='50'>Change</th>
  </thead>
  <tbody>
    <%= form_tag update_status_lunch_path(@lunch), method: :put do %>

    <% @users_not_going.each do |user| %>
    <tr>
      <td><%= user.name %> </td>
      <td>
      <%= check_box_tag "lunch[users][]", user.id %>
      <%= label_tag "lunch[users][]", ""%> </td>
    </tr>
    <%end%>
    <%= submit_tag 'ADD TO LUNCH', class: 'button'%>
    <% end %>
  </tbody>
</table>
</div>
</div>

<div class="wrapper">
  <%= simple_form_for @lunch do |f| %>
  <div class="large-6 large-offset-3 columns"><%= f.input :name %>
  <%= f.submit %>
  <%end%>
</div>
