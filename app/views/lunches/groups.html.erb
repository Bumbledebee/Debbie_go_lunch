<div class="wrapper">
  <table>
    <thead>
      <tr>
      <th width="200">group</th>
      <th width="50">id</th>
      <th width="100">size</th>
      <th width="150">participants</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
      <td><%= group.name %></td>
      <td><%= group.id %></td>
      <td>Size of the lunch</td>
      <% group.users.each do |user|%>
      <td><%=user.name%></td>
        </tr>
      <%end%>
      <%end%>
    </tbody>
  </table>
</div>
